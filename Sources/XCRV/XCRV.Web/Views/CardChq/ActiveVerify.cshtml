
@{
    ViewData["Title"] = "Card Cheque Active Verify";
    Layout = "~/Views/Shared/Template/_Layout.cshtml";
}

<style>
    .form-check {
        padding-left: 0rem !important;
    }

    .dropdown-menu {
        /*  position: absolute;
                top: 100%;
                left: 0;*/
        z-index: 1035;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Queue Management</a></li>
                    <li class="breadcrumb-item active">Card Cheque Active Verify</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Card Cheque Active Verify</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <label>Card Number</label>
                            <input type="text" class="form-control" id="CardNo" name="CardNo" value="@ViewBag.CardNo" />
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <label>Cheque Number</label>
                            <input type="text" class="form-control" id="ChequeNo" name="ChequeNo" value="@ViewBag.ChequeNo" />
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6" style="display:none">
                        <div class="form-group">
                            <label>Maker User</label>
                            <select class="form-control" id="ddlMakerUser">
                                <option value="">Select</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <label>From Date</label>
                            <div class='input-group'>
                                <input type="text" id="fromDate" name="fromDate" class="form-control singledate" value="@ViewBag.FromDate" autocomplete="off" />
                                <div class="input-group-append">
                                    <label for="payOffDate" class="input-group-text">
                                        <span class="fa fa-calendar"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <label>To Date</label>
                            <div class='input-group'>
                                <input type="text" id="toDate" name="toDate" class="form-control singledate" value="@ViewBag.ToDate" autocomplete="off" />
                                <div class="input-group-append">
                                    <label for="payOffDate" class="input-group-text">
                                        <span class="fa fa-calendar"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-info" id="btnSearch" name="btnPaymentHistory">
                                    <span>Search</span>
                                </button>
                                <button type="button" class="btn btn-danger" id="btnShowCheckSelected" name="btnShowCheckSelected">
                                    <span>Check</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center align-items-center" id="chqInfo">
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
            </div>
        </div>

    </div><!-- /.container-fluid -->

</div><!-- /.contant -->

<div class="modal fade" id="ChqBookVerifyConfrimModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header bg-gradient-info">
                <h4 class="modal-title">Cheque Book Check</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <h3>Are you sure?</h3>
                        <input type="hidden" id="confirmChqNo" />
                        <input type="hidden" id="confirmCardNo" />
                        <input type="hidden" id="confirmRemark" />
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button id="btnConfirmVerify" type="button" class="btn btn-success">Yes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="SelectedChqBookVerifyConfrimModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header bg-gradient-info">
                <h4 class="modal-title">Cheque Book Check</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Remarks</label>
                            <input type="text" class="form-control" id="Remarks" name="Remarks"  />
                        </div>
                    </div>
                    <div class="col-12">
                        <h3>Are you sure?</h3>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button id="btnConfirmSelectedVerify" type="button" class="btn btn-success">Yes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section ScriptSection
{
    <!-- DataTables  & Plugins -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
