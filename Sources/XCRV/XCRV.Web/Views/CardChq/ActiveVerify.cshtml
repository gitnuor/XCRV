    <script>
    $(document).ready(function () {

    @if (TempData.ContainsKey("ErrorMessage"))
    {
        @:toastr.error('@TempData["ErrorMessage"]');
    };
    });

    </script>


    <script>
        $(function () {
            $('#fromDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd-M-yyyy",
                language: "tr",
                autoclose: true
            });

            $('#toDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "dd-M-yyyy",
                language: "tr",
                autoclose: true
            });
        });

    </script>


    <script>
        var table;


        //function GetMakerList() {
        //    $.ajax({
        //        url: "@Url.Action("GeMakerList", "CardChq")",
        //        success: function (data) {
        //            console(data);
        //        }
        //    });

        //}

        function ChqBookInfo(submited) {
            var refNo= '';
            var chqNo = $('#ChequeNo').val();
            var cardNo = $('#CardNo').val();
            var userID = $('#ddlMakerUser').val();
            var frmDate = $('#fromDate').val();
            var todate = $('#toDate').val();
            var remarks = $('#Remarks').val();

            $.ajax({
                url: "@Url.Action("ShowChqBookInfoForVerification", "CardChq")",
                data: { refNo: refNo, chqNo: chqNo, cardNo: cardNo, remarks: remarks, userID: userID, frmDate: frmDate, todate: todate, submited: submited },
                success: function (data) {

                    $("#chqInfo").html(data);

                    $("#chqbookList").DataTable().destroy();
                    table = $("#chqbookList").DataTable({
                        "responsive": false, "autoWidth": false, "filter": true, "ordering": false
                    });
                    $("#chqbookList").wrap('<div style="overflow:auto;" />');


                    $('#checkall').click(function () {
                        if ($(this).is(':checked')) {
                            $('.delete_check').prop('checked', true);
                        } else {
                            $('.delete_check').prop('checked', false);
                        }
                    });

                    $('.delete_check').click(function () {
                        var totalCheckboxes = $("#chqbookList input[id*='chkSelect']:checkbox").length;
                        //Get number of checked checkboxes in list
                        var checkedCheckboxes = $("#chqbookList input[id*='chkSelect']:checkbox:checked").length;
                        //Check / Uncheck top checkbox if all the checked boxes in list are checked
                        $("#chqbookList input[id*='checkall']:checkbox").attr('checked', totalCheckboxes == checkedCheckboxes);
                    });

                    //GetMakerList();

                   

                    //var message = $('#errorMessage').val();
                    //if (message) {
                    //    toastr.error(message)
                    //}
                }
                //,
                //error: function (jqXHR, textStatus, errorThrown) {

                //    console.log(jqXHR);

                //    if (jqXHR.status == 500) {
                //        toastr.error("Error", 'Internal error: ' + jqXHR.responseText);
                //    } else {
                //        toastr.error("Error", 'Unexpected error.' + jqXHR.status);
                //    }
                //}
            });

        }

        ChqBookInfo('');

        $(document).on('click', '#btnSearch', function () {
            ChqBookInfo('submited');
        });

        function ShowConfirmModalPopup(chqBookSL, cardNo) {

            remarks = $("#txtRemarksGrid_" + chqBookSL).val();

            if (!remarks) {
                toastr.error("Error", 'Remarks can\'t be empty');
                return;
            }
            $("#ChqBookVerifyConfrimModal").modal("show");
            $("#confirmChqNo").val(chqBookSL);
            $("#confirmCardNo").val(cardNo);
            $("#confirmRemark").val(remarks);

        }

        $(document).on('click', '#btnConfirmVerify', function () {

            remarks = $('#confirmRemark').val();

            if (!remarks) {
                toastr.error("Error", "Remarks is Required!!!");
                return;
            }
            //alert(remarks);
            data = {
                remarks: remarks,
                chqNo: $("#confirmChqNo").val(),
                cardNo: $("#confirmCardNo").val()
            }


            $.ajax({
                url: "/CardChq/VerifyActiveChqBook",
                type: "POST",
                data: { requst: data },
                success: function (data) {

                    if (data.status == true) {
                        toastr.success("message", data.message);
                    }
                    else {
                        toastr.error("Error", data.message);
                    }

                    $("#ChqBookVerifyConfrimModal").modal("hide");
                    ChqBookInfo('submitted');
                }
                //,
                //error: function (jqXHR, textStatus, errorThrown) {
                //    if (jqXHR.status == 500) {
                //        toastr.error("Error", 'Internal error: ' + jqXHR.responseText);
                //    } else {
                //        toastr.error("Error", 'Unexpected error.' + jqXHR.status);
                //    }
                //}
            });

        });


        $(document).on('click', '#btnShowCheckSelected', function () {
                        var checkedCheckboxes = $("#chqbookList input[id*='chkSelect']:checkbox:checked");

            console.log(checkedCheckboxes);


            if (checkedCheckboxes.length == 0) {
                toastr.error("Error", "No Cheque Book Selected!!!");
                return;
            }

            $("#SelectedChqBookVerifyConfrimModal").modal("show");
        });


        $(document).on('click', '#btnConfirmSelectedVerify', function () {

            remarks = $('#Remarks').val();

            if (!remarks) {
                toastr.error("Error", "Remarks is Required!!!");
                return;
            }

            var checkedCheckboxes = $("#chqbookList input[id*='chkSelect']:checkbox:checked");
            console.log(checkedCheckboxes);
            //alert(checkedCheckboxes.length);
            list = [];
            checkedCheckboxes.each(function () {
                data = {
                    remarks: remarks,
                    chqNo: $(this).data('chqno'),
                    cardNo: $(this).data('cardno')
                }
                list.push(data);
            });

            console.log(list);

            $.ajax({
                url: "/CardChq/VerifyActiveChqBookList",
                type: "POST",
                data: { requst: list },
                success: function (data) {
                    if (data.status == true) {
                        toastr.success("message", data.message);
                        $("#SelectedChqBookVerifyConfrimModal").modal("hide");
                        $('#Remarks').val('');
                        ChqBookInfo('submitted');
                    }
                    else {
                        toastr.error("Error", data.message);
                    }
                }
                //,
                //error: function (jqXHR, textStatus, errorThrown) {
                //    if (jqXHR.status == 500) {
                //        toastr.error("Error", 'Internal error: ' + jqXHR.responseText);
                //    } else {
                //        toastr.error("Error", 'Unexpected error.' + jqXHR.status);
                //    }
                //}
            });

        });

    </script>

}
