@using XCRV.Domain.Entities

@model IEnumerable<Guarantor>

<h5>Customer Info</h5>
<div class="row justify-content-center align-items-center">
    <div class="col-md-12">
        <div class="form-group row">
            <div class="col-12 table-responsive-sm">
                <table class="table smallfrontTable" >
                    <tr>
                        <th style="text-align:right">Principal Customer ID : </th>
                        <td style="text-align:left">@Html.Raw(ViewBag.PrincipalCustomerId)</td>
                        <th style="text-align:right">Principle Customer Name: </th>
                        <td style="text-align:left">@ViewBag.PrincipleCustomerName</td>
                    </tr>

                    <tr>
                        <th style="text-align:right">Schm Code :</th>
                        <td style="text-align:left;">@ViewBag.SchmCode</td>
                        <th style="text-align:right">Schm Desc :</th>
                        <td style="text-align:left;">@ViewBag.SchmDesc</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<h5>Guarantor List</h5>
<div class="row">
    <div class="col-12">
        <table class="table table-striped " id="tblPayoff">
            <thead>
                <tr>
                    <th>Guaranter Name</th>
                    <th>Relation Type</th>
                    <th>Relational Code</th>
                    <th>Address</th>
                    <th>Del.Flag</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.acct_poa_as_name</td>
                        <td>@item.acct_poa_as_rec_type</td>
                        <td>@item.cust_reltn_code</td>
                        <td>@Html.Raw(item.address)</td>
                        <td>@item.del_flg</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
