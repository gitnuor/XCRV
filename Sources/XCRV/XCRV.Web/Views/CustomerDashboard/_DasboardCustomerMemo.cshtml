@using XCRV.Domain.Entities;
@model IList<CustomerMemo>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="row">
    <div class="col-12">
        <table id="list-of-account-tbl" class="table table-striped table-sm">
            <thead>
                <thead>
                    <tr>                        
                        <th style="width: 30%;">Date</th>
                        <th style="width: 70%;">Memo</th>
                    </tr>
                </thead>
            </thead>
            <tbody>
                @foreach( var item in Model)
                {
                    <tr>
                        <td>@Convert.ToDateTime(item.entryDate).ToString("dd-MMM-yyyy")</td>
                        <td>@item.memoText</td>                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>