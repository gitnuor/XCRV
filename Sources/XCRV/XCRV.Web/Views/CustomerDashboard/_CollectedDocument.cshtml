@model IList<LoanDocumentDashboardViewModel>

<div class="row">
    <div class="col-12" id="accordion">
        <div class="card card-primary card-outline">

            @foreach(var item in Model)
            {
                var fName = "collapse_" + item.AccountNumber;
                <a class="d-block w-100" data-toggle="collapse" href="#@fName" >
                    <div class="card-header">
                        <h4 class="card-title w-100">
                            Account Number: @item.AccountNumber
                        </h4>
                    </div>
                </a>
                <div id="@fName" class="collapse " data-parent="#accordion">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12" style="font-size: 12px;" >  
                                
                                @if(!string.IsNullOrEmpty(item.ErrorMessage))
                                {
                                    <strong style="color: red;">@item.ErrorMessage</strong>
                                }
                                else
                                {
                                    <table class="table table-striped table-sm " id="tblDocument">
                                        <thead>
                                            <tr>
                                                <th>Document Code</th>
                                                <th>Description</th>
                                                <th>Received Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var itemD in item.DocList)
                                            {
                                                <tr>
                                                    <td>@itemD.document_code</td>
                                                    <td>@itemD.ref_desc</td>
                                                    <td>@itemD.received_date</td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>    
            }
            
        </div>
        
    </div>
</div>