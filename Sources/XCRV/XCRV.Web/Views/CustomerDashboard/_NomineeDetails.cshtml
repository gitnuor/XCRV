@model IList<NomineeViewModel>

<div class="row">
    <div class="col-12" id="accordion">
        <div class="card card-primary card-outline">

            @foreach(var item in Model)
            {
                var fName = "collapse" + item.AccountNumber;
                
                <a class="d-block w-100" data-toggle="collapse" href="#@fName">
                    <div class="card-header">
                        <h4 class="card-title w-100">
                            Account Number: @item.AccountNumber
                        </h4>
                    </div>
                </a>
                <div id="@fName" class="collapse " data-parent="#accordion">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <partial name="_Nominee" model="@item.Nominees" />
                            </div>

                        </div>
                    </div>
                </div>    
            }
            
        </div>
        
    </div>
</div>