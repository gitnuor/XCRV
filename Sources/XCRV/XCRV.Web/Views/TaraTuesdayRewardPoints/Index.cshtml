            }
    function loadRewardInfoCredit(searchType, searchString,fdate,tdate ) {

                         $.ajax({
                             type: 'GET',
                             url: '/TaraTuesdayRewardPoints/getTaraTuesdayRewardPoint',
                             contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                             data: {seachType:searchType,seachString:searchString,fdate:fdate,tdate:tdate},
                             success: function (result) {
