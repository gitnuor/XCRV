                             contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                             data: {seachType:searchType,seachString:searchString,OnDate:OnDate},
                             success: function (result) {
                              if (result.data.tuesdayDetail != null) {
                                  debugger;

                                     $('#lblTotalEarned').text(result.data.tuesdayDetail.totaL_REWARD);
                                     $('#lblAvailableRewardPoints').text(result.data.tuesdayDetail.availableReward);
                                     $('#lblRewardPointsEarned').text(result.data.tuesdayDetail.twesdaY_REWARD);
                                     $('#lbllastStatementDate').text(result.data.tuesdayDetail.statementDate);

                                      $('#lblCardholderName').text(result.data.contactDetailDebit.cb_cardholder_name);
                                      $('#lblContact').text(result.data.contactDetailDebit.cb_mobile_no);


                                 } else {
                                     toastr.error('No data found.');
                                 }
                             },
                             error: function () {
                                 toastr.error('Reward Point Data :: Failed to receive the Data');
                                 console.log('Failed ');
                             }
                    });
            }
      function loadCardHolderContactNoCredit(searchString) {

                         $.ajax({
                             type: 'GET',
                             url: '/TaraTuesdayRewardPoints/getCardHolderContactNoCredit',
                             contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                             data: {seachString:searchString},
                             success: function (result) {
                              if (result.data != null) {
                                      $('#lblCardholderName').text(result.data.cb_cardholder_name);
                                      $('#lblContact').text(result.data.cb_mobile_no);
                                 } else {
                                     toastr.error('No data found.');
                                 }
                             },
                             error: function () {
                                 //alert('Reward Point Data :: Failed to receive the Data');
                                 toastr.error('Reward Point Data :: Failed to receive the Data');
                                 console.log('Failed ');
                             }

                    });

            }
   
   
</script>

