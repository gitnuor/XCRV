    $('.dropdown-menu').on('click', 'a', function () {
        $('#lblCardholderName').text('');
        $('#lblTotalEarned').text('');
        $('#lblAvailableRewardPoints').text('');
        $('#lblRewardPointsEarned').text('');
        $('#lblRewardPointsEarned').text('');
        $('#lblContact').text('');
        var text = $(this).html();
        var htmlText = text;
        debugger;
        if(htmlText=="Credit Card")
        {
          $('#statementDate').show();
        }else{
          $('#statementDate').hide();
        }
        $(this).closest('.input-group-prepend').find('.dropdown-toggle').html(htmlText);
    });
</script>

<script>
     
        $(document).on('click', '#btnSearch',  function () {
            debugger;
            var type = $('#btnSearchAction').text();
            var searchString = $('#txtSearchString').val();
            var fdate=$('#txtFromDate').val();
            var tdate=$('#txtToDate').val();
            var OnDate=$('#txtDate').val();

            var searchType = '';
            switch (type) {
                case "Debit Card":
                    searchType = "DebitCard";
                    break;
                case "Credit Card":
                    searchType = "CreditCard";
                     $('#statementDate').show();
                    break;
                default:
                    searchType = type;
                    break;
            }

            if ($('#tranchk').is(':checked'))
            {
                if(searchString=='')
                {
                  toastr.error('Card no cannot be empty.');
                  return;
                }
                else if(fdate=='' || tdate=='')
                {
                  toastr.error('From date and To date  cannot be empty.');
                  return;
                }
                else if(type=='Search By')
                {
                  toastr.error('Select debit or credit card.');
                  return;
                }
                else{
                  if( searchType == "DebitCard")
                     {
                       loadRewardInfoDebit(searchType, searchString,fdate,tdate );
                     }
                  else
                    {
                      loadRewardInfoCredit(searchType, searchString,fdate,tdate );
                     // loadCardHolderContactNoCredit(searchString);
                    }
                }
           }
          else{
                if(searchString=='')
                {
                  toastr.error('Card no cannot be empty.');
                  return;
                }
                else if(type=="\n                                    Search By\n                                ")
                {
                  toastr.error('Select debit or credit card.');
                  return;
                }
                //else if(type!='Credit Card')
                //{
                //  toastr.error('Select debit or credit card.');
                //  return;
                //}
                else{
                    if( searchType == "DebitCard")
                       {
                         loadRewardInfoDebitOnDate(searchType, searchString,OnDate);
                       }
                   else
                      {
                        loadRewardInfoCreditOnDate(searchType, searchString,OnDate);
                        //loadCardHolderContactNoCredit(searchString);
                      }
                }
          }

        });

       function loadRewardInfoDebit(searchType, searchString,fdate,tdate ) {

                         $.ajax({
                             type: 'GET',
                             url: '/TaraTuesdayRewardPoints/getTaraTuesdayRewardPoint',
                             contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                             data: {seachType:searchType,seachString:searchString,fdate:fdate,tdate:tdate},
                             success: function (result) {
                              if (result.data.tuesdayDetail != null) {
                                  debugger;
                                     $('#lblCardholderName').text(result.data.tuesdayDetail.card_Holder_Name);
                                     $('#lblTotalEarned').text(result.data.tuesdayDetail.totaL_REWARD);
                                     $('#lblAvailableRewardPoints').text(result.data.tuesdayDetail.avail_Reward_point);
                                     $('#lblRewardPointsEarned').text(result.data.tuesdayDetail.totaltuesday);
                                     $('#lblContact').text(result.data.contactDetailDebit.mobileno);
                                    // loadCardHolderContactNoDebit(searchString);

                                 } else {
                                      toastr.error('No data found.');
                                       $('#lblCardholderName').text('');
                                       $('#lblTotalEarned').text('');
                                       $('#lblAvailableRewardPoints').text('');
                                       $('#lblRewardPointsEarned').text('');
                                       $('#lblContact').text('');
                                 }
                             },
                             error: function () {
                                 toastr.error('Reward Point Data :: Failed to receive the Data');
                                 console.log('Failed ');
                             }

                    });
            }

     function loadRewardInfoDebitOnDate(searchType, searchString,OnDate) {

                         $.ajax({
                             type: 'GET',
                             url: '/TaraTuesdayRewardPoints/getTaraTuesdayRewardPointOnDate',
                             contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                             data: {seachType:searchType,seachString:searchString,OnDate:OnDate},
                             success: function (result) {
                              if (result.data.tuesdayDetail != null) {
                                  debugger;
                                     $('#lblCardholderName').text(result.data.tuesdayDetail.card_Holder_Name);
                                     $('#lblTotalEarned').text(result.data.tuesdayDetail.totaL_REWARD);
                                     $('#lblAvailableRewardPoints').text(result.data.tuesdayDetail.avail_Reward_point);
                                     $('#lblRewardPointsEarned').text(result.data.tuesdayDetail.totaltuesday);
                                     $('#lblContact').text(result.data.contactDetailDebit.mobileno);
                                    // loadCardHolderContactNoDebit(searchString);

                                 } else {
                                     toastr.error('No data found.');
                                       $('#lblCardholderName').text('');
                                       $('#lblTotalEarned').text('');
                                       $('#lblAvailableRewardPoints').text('');
                                       $('#lblRewardPointsEarned').text('');
                                       $('#lblContact').text('');
                                 }
                             },
                             error: function () {
                                 toastr.error('Reward Point Data :: Failed to receive the Data');
                                 console.log('Failed ');
                             }

                    });
            }

     function loadCardHolderContactNoDebit(searchString) {

                         $.ajax({
                             type: 'GET',
                             url: '/TaraTuesdayRewardPoints/getCardHolderContactNo',
                             contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                             data: {seachString:searchString},
                             success: function (result) {
                              if (result.data != null) {
                                     $('#lblContact').text(result.data.mobileno);
                                 } else {
                                     toastr.error('No data found.');
                                 }
                             },
                             error: function () {
                                 //alert('Reward Point Data :: Failed to receive the Data');
