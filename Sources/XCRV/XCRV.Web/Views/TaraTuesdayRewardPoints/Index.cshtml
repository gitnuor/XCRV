<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Tara Reward Tuesday Points</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <input id="tranchk" type="checkbox" value="true" name="Live" style="zoom:1.5;" />&nbsp;<b style="font-size: 11px;">Date Wise</b>
                <input type="hidden" value="false" name="Live" />
                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group mb-3">

                            <div class="input-group-prepend">

                               
                                <button type="button" id="btnSearchAction" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" style="min-width: 200px!important;margin-top:33px;">
                                    Search By
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-item"><a href="#">Debit Card</a></li>
